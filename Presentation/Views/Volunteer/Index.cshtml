@model IEnumerable<VolunteerHoursTracker.Infrastructure.Entities.Volunteer>

@{
    ViewData["Title"] = "Volunteers";
}

<div class="container mt-5">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Volunteers</h1>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addVolunteerModal">
            <i class="bi bi-plus-lg"></i> Add Volunteer
        </button>
    </div>

    <!-- Search Bar -->
    <div class="mb-3">
        <input type="text" class="form-control" id="searchInput" placeholder="Search by name or email..." onkeyup="filterTable()">
    </div>

    <!-- Volunteer Table -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover" id="volunteerTable">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Total Hours</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td>@v.Name</td>
                        <td>@v.Email</td>
                        <td>@v.Age</td>
                        <td>@v.VolunteerHours.Sum(h => h.Hours)</td>
                        <td class="text-center">
                            <a asp-action="LogHours" asp-route-id="@v.Id" class="btn btn-sm btn-primary me-2">
                                <i class="bi bi-pencil-square"></i> Log Hours
                            </a>
                            <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pen"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Top Volunteers Section -->
    <div class="mt-5">
        <h3 class="text-success mb-3">Top Volunteers</h3>
        <div class="row g-3">
            @foreach (var v in Model.OrderByDescending(v => v.VolunteerHours.Sum(h => h.Hours)).Take(5))
            {
                <div class="col-md-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@v.Name</h5>
                            <p class="card-text">Total Hours: <strong>@v.VolunteerHours.Sum(h => h.Hours)</strong></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Volunteer Modal -->
<div class="modal fade" id="addVolunteerModal" tabindex="-1" aria-labelledby="addVolunteerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addVolunteerModalLabel">Add New Volunteer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" class="form-control" id="age" name="age" required>
                    </div>
                    <div class="mb-3">
                        <label for="hours" class="form-label">Hours</label>
                        <input type="number" class="form-control" id="hours" name="hours" placeholder="Enter Hours">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Add Volunteer</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Optional: Filter script -->
<script>
    function filterTable() {
        let input = document.getElementById("searchInput");
        let filter = input.value.toLowerCase();
        let table = document.getElementById("volunteerTable");
        let rows = table.getElementsByTagName("tr");

        for (let i = 1; i < rows.length; i++) {
            let cells = rows[i].getElementsByTagName("td");
            let name = cells[0].textContent.toLowerCase();
            let email = cells[1].textContent.toLowerCase();
            let age = cells[2].textContent.toLowerCase();
            if (name.includes(filter) || email.includes(filter) || age.includes(filter)) {
                rows[i].style.display = "";
            } else {
                rows[i].style.display = "none";
            }
        }
    }
</script>
